<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/adminStyle.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body>
    <div class="row">
        <div class="col-4">
          <div class="list-group" id="list-tab" role="tablist">
            <a class="navbar-brand">Menú</a>
            <a class="list-group-item list-group-item-action active" id="doctores" data-bs-toggle="list" href="#list-doctores" role="tab" aria-controls="list-doctores">doctores</a>
            <td> <a href ="/newdoctor"><button class="btn btn-primary" id="agregar-registro">Agregar...</button></a></td>
            <a class="list-group-item list-group-item-action" id="pacientes" data-bs-toggle="list" href="#list-pacientes" role="tab" aria-controls="list-pacientes">pacientes</a>
            <td> <a href ="/newpaciente"><button class="btn btn-primary" id="agregar-registro">Agregar...</button></a></td>
            <a class="list-group-item list-group-item-action" id="proveedores" data-bs-toggle="list" href="#list-proveedores" role="tab" aria-controls="list-proveedore">proveedores</a> 
            <td> <a href ="/newproveedor"><button class="btn btn-primary" id="agregar-registro">Agregar...</button></a></td>
        </div>
        <div class="btn-group fixed-bottom" role="group">
            <a href="/logout" class="btn btn-primary">Salir</a>
            <a href="/configuracion" class="btn btn-primary">Configuración</a>

        </div> 
        </div> 
        <div class="col-md-7">
          <table class="table-bordered table-striped">                        
                  <% if(NombreAtributos[0].title == "Doctores"){ %>
                      <thead><tr>
                      <%  for (let i =0; i<AtributosDoctores.length; i++)     {   %>                           
                              <th><%= AtributosDoctores[i].atributo  %></th>                           
                          <%   }     %>
                          <th>Opciones</th>  
                      </tr></thead>
                      <tbody class="table-group-divider">
                          <%  for (let i =0; i<doctor.length; i++)     {   %>                           
                              <tr>               
                                  <td><%= doctor[i].nombre  %></td>   
                                  <td><%= doctor[i].email  %></td>  
                                  <td><%= doctor[i].cedula  %></td>  
                                  <td><%= doctor[i].especialidad  %></td>  
                                  <td><%= doctor[i].pacientes  %></td>  
                                  <td> <a href="/<%=doctor[i].Facturas %>" download="Factura" class="btn btn-info btn-sm">Descargar</a></td>                          
                                  <td>
                                    <a class = "btn btn-danger" href ="/delete/<%= doctor[i]._id %>"> Delete </a>
                                    <a class = "btn btn-info" href ="/edit/<%= doctor[i]._id %>"> Edit </a>
                                  </td>  
                              </tr>
                          <%   }     %>

                      </tbody>
                      <% }  %>
                          <% if(NombreAtributos[1].title == "Pacientes"){ %>
                      <thead><tr>
                          <%  for (let i =0; i<AtributosPacientes.length; i++)     {   %>                           
                                  <th><%= AtributosPacientes[i].atributo  %></th>                           
                              <%   }     %>
                              <th>Opciones</th>  
                          </tr></thead>
                          <tbody class="table-group-divider">
                              <%  for (let i =0; i<paciente.length; i++)     {   %>                           
                                  <tr>                     
                                      <td><%= paciente[i].nombre  %></td>   
                                      <td><%= paciente[i].apellido %></td>  
                                      <td><%= paciente[i].email  %></td>  
                                      <td><%= paciente[i].sexo  %></td>  
                                      <td><%= paciente[i].edad  %></td> 
                                      <td> <a href="/<%=paciente[i].Facturas %>" download="Factura" class="btn btn-info btn-sm">Descargar</a></td>                          
                                      <td>
                                        <a class = "btn btn-danger" href ="/deletepa/<%= paciente[i]._id %>"> Delete </a>
                                        <a class = "btn btn-info" href ="/editpa/<%= paciente[i]._id %>"> Edit </a>
                                      </td>  
                                  </tr>
                              <%   }     %>
                          </tbody>
                  <% } %>

                  <% if(NombreAtributos[2].title == "Proveedores"){ %>
                      <thead><tr>
                          <%  for (let i =0; i<proveedor.length; i++)     {   %>                           
                                  <th><%= AtributosProveedores[i].atributo  %></th>                           
                              <%   }     %>
                              <th>Opciones</th>  
                          </tr></thead>
                          <tbody class="table-group-divider">
                              <%  for (let i =0; i<proveedor.length; i++)     {   %>                           
                                  <tr>                     
                                      <td><%= proveedor[i].empresa  %></td>   
                                      <td><%= proveedor[i].rfc  %></td>  
                                      <td><%= proveedor[i].registro  %></td>  
                                      <td><%= proveedor[i].localidad  %></td>  
                                      <td><%= proveedor[i].estado  %></td>
                                      <td> <a href="/<%=proveedor[i].Facturas %>" download="Factura" class="btn btn-info btn-sm">Descargar</a></td>                          
                                      <td>
                                        <a class = "btn btn-danger" href ="/deletepr/<%= proveedor[i]._id %>"> Delete </a>
                                        <a class = "btn btn-info" href ="/editpr/<%= proveedor[i]._id %>"> Edit </a>
                                      </td>  
                                  </tr>
                              <%   }     %>
     
                          </tbody>
                  <% } %>

                  
          </table>
      </div>
  </div>      

   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous"></script>
</body>
<script  src="../public/js/adminScript.js"></script>

</html>