<html lang="en">
<head>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  </head>

<body>
<div id="form">
  <div class="container">
    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-md-8 col-md-offset-2">
      <div id="userform">
        <ul class="nav nav-tabs nav-justified" role="tablist">
        </ul>
        <div class="tab-content">
          <div class="tab-pane fade active in" id="signup">
            <h2 class="text-uppercase text-center"> Registro de doctor</h2>
            <form id="signup" action="/signup" method = "POST">
              <div class="row">
                <div class="col-xs-12 col-sm-6"> 
                  <div class="form-group">
                    <label> Nombre<span class="req">*</span> </label>
                    <input type="text" name="nombre" class="form-control" id="nombre" required data-validation-required-message="Por favor escriba su nombre" autocomplete="off">
                    <p class="help-block text-danger"></p>
                  </div>
                </div>

                <div class="col-xs-12 col-sm-6">
                  <div class="form-group">
                    <label>Cédula<span class="req">*</span> </label>
                    <input type="text" name="cedula" class="form-control" id="cedula" required data-validation-required-message="Por favor escriba su cédula" autocomplete="off">
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
              </div>
              
              <div class="form-group">
                <label>  Email<span class="req">*</span> </label>
                <input type="email" name="email" class="form-control" id="email" required data-validation-required-message="Por favor escriba su correo" autocomplete="off">
                <p class="help-block text-danger"></p>
              </div>             

              <div class="form-group">
                <label> Especialidad<span class="req">*</span> </label>
                <input type="text" name="especialidad" class="form-control" id="especialidad" required data-validation-required-message="Por favor escriba su especialidad" autocomplete="off">
                <p class="help-block text-danger"></p>
              </div>

              <div class="row">
                <div class="col-xs-12 col-sm-6"> 
                  <div class="form-group">
                    <label> Pacientes<span class="req">*</span> </label>
                    <input type="text" name="pacientes" class="form-control" id="pacientes" required data-validation-required-message="Por favor escriba la cantidad de pacientes" autocomplete="off">
                    <p class="help-block text-danger"></p>
                  </div>
                </div>

                <div class="col-xs-12 col-sm-6">
                  <div class="form-group">
                    <label> Facturas mensuales<span class="req">*</span> </label>
                    <input type="text" name="facturas" class="form-control" id="facturas" required data-validation-required-message="Por favor escriba la cantidad de facturas mensuales" autocomplete="off">
                    <p class="help-block text-danger"></p>
                  </div>
                </div>
              </div>
             
              <div class="btn-group" role="group">
                <a href="#guardar" class="btn btn-larger">Guardar</a>
                <a href="#cancelar" class="btn btn-larger">Cancelar</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /.container --> 
</div>
<script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</body>
